@using TracNghiemOnline.Models
@{ ViewBag.Title = "Danh sách đề luyện tập ";
    Layout = "~/Views/Shared/_LayoutTestTeacher.cshtml";

    var ListSubject = ViewBag.ListSubject;
    var ListTest = Model as List<TestViewModel>;
    var stt = 0; }

<header>
    <style>
        .search-table {
            background-color: #fefcfc;
            margin: 10px 0;
        }

            .search-table td {
                padding: 0 20px;
                height: 80px;
                font-size: 18px;
            }

        #txtSearch {
            font-size: 18px;
            color: black;
        }

        ::placeholder {
            color: #191717;
        }
    </style>
</header>

<div class="title-content">
    <h4 style="margin:0 20px; padding: 20px"> @ViewBag.Title </h4>
</div>
<div class="content row col s6 reset-margin">
    @{using (Html.BeginForm("Index", "Teacher", FormMethod.Post))
        {
<table class="search-table">
    <tr>
        <td width="200px" style="text-align:right"> <span> Tìm kiếm </span>  </td>
        <td width="300px">
            <div class="dropdown-list" style="width: 300px">
                <select name="id_subject" id="id_subject" style="display: block" required>
                    <option value="0" selected> Tất cả môn học </option>
                    @foreach (var item2 in ListSubject)
                    {
    <option value="@item2.id_subject"> @item2.subject_name </option>
}
                </select>
            </div>
        </td>
        <td width="350px">
            <input type="text" class="form-control" name="txtSearch" id="txtSearch" placeholder="Nhập tên đề luyện tập cần tìm">
        </td>
        <td>
            <input style="margin-left: 20px; font-size: 18px" type="submit" class="btn" value="Tìm kiếm ">
        </td>
    </tr>
</table> } }

    @foreach (var item in ListTest)
    {
        stt = stt + 1;
<div class="col s6 m6 l3">
    <div class="dashboard-inner-item" style="margin: 10px;padding: 20px">
        <span class="title">Môn học: <b>@item.subject.subject_name</b></span><br />
        <span class="title">Mã đề: <b>@item.test.test_code</b></span><br />
        <span class="title"> Đề luyện tập: <b>@item.test.test_name</b></span><br />
        <span class="title">Số câu hỏi: <b>@item.test.total_questions</b></span><br />
        <span class="title">Thời gian: <b>@item.test.time_to_do (phút)</b></span><br />
        <span class="title">Ghi chú: <b>@item.test.note</b></span><br />
        <span class="title">Trạng thái: <b>@item.status.status_name</b></span><br />
        <a class="btn full-width" href="@Url.Action("Preview/" + @item.test.test_code)">Xem chi tiết đề</a>

    </div>
</div>      }
    @{ if (stt == 0)
        {
<h5 style="text-align: center; margin-left: 20px">Không tìm thấy dữ liệu đề luyện tập nào. </h5> } }

</div>

<script></script>