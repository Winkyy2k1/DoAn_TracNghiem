@using TracNghiemOnline.Models
@{
    ViewBag.Title = "Danh sách đề thi";
    Layout = "~/Views/Shared/_LayoutTest.cshtml";
    var ListTest = Model as List<TestViewModel>;
    var stt = 0;
}

<header>
</header>

<div class="title-content">
    <h4 style="margin:0 20px; padding: 20px"> @ViewBag.Title </h4>
</div>
<div class="content row col s6 reset-margin">
     @{using (Html.BeginForm("Index", "Teacher", FormMethod.Post))
         {
            <div class="form-group">
               <input type="text" class="form-control"  name="txtSearch" id="txtSearch" placeholder="Nhập tên bài thi cần tìm">
               <input type="submit" class="btn" value="Tìm kiếm ">
            </div>
          
             } }

            @foreach (var item in ListTest)
            {
                stt = stt + 1;
                <div class="col s6 m6 l3">
                    <div class="dashboard-inner-item" style="margin: 10px;padding: 20px">
                        <span class="title">Môn: <b>@item.subject.subject_name</b></span><br />
                        <span class="title">Mã đề: <b>@item.test.test_code</b></span><br />
                        <span class="title">Bài thi: <b>@item.test.test_name</b></span><br />
                        <span class="title">Số câu hỏi: <b>@item.test.total_questions</b></span><br />
                        <span class="title">Thời gian: <b>@item.test.time_to_do (phút)</b></span><br />
                        <span class="title">Ghi chú: <b>@item.test.note</b></span><br />
                        <span class="title">Trạng thái: <b>@item.status.status_name</b></span><br />
                        <a class="btn full-width" href="@Url.Action("Preview/" + @item.test.test_code)">Xem chi tiết </a>

                    </div>
                </div>
            }
        
            @{ 
                if(stt == 0)
                {
                    <h4>   Không tìm thấy dữ liệu bài thi nào. </h4>
                }
                    
            }
        
</div>

<script>
</script>