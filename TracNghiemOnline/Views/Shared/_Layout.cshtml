@using TracNghiemOnline.Common

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        @ViewBag.Title
    </title>
    
    @* Landing Page *@
    <link href="Assets/LandingPage/img/favicon.ico" rel="icon" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Handlee&family=Nunito&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet" />
    <link href="~/Assets/LandingPage/lib/flaticon/font/flaticon.css" rel="stylesheet" />
    <link href="~/Assets/LandingPage/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Assets/LandingPage/lib/lightbox/css/lightbox.min.css" rel="stylesheet" />
    <link href="~/Assets/LandingPage/css/style.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Assets/js/materialize.min.js"></script>
</head>

<body class="body-login scrollbar">
    <div class="navbar-fixed">

        <!-- Navbar Start -->
        <div class="container-fluid bg-light position-relative shadow">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0 px-lg-5">
                <a href="/Home/Index" class="navbar-brand font-weight-bold text-secondary" style="font-size: 50px">
                    <i class="flaticon-043-teddy-bear"></i>
                </a>
                <div class="collapse navbar-collapse justify-content-between"
                     id="navbarCollapse">
                    <div class="navbar-nav font-weight-bold mx-auto py-0">
                        <a href="/Home/Index" class="nav-item nav-link active"> Trang chủ</a>
                        <a href="/Home/About" class="nav-item nav-link"> Thông tin </a>
                        <a href="#" class="nav-item nav-link"> Lớp học </a>
                        <a href="#" class="nav-item nav-link"> Giáo viên </a>
                        <a href="/Home/About" class="nav-item nav-link"> Liên hệ </a>
                    </div>
                </div>
                <div class="navbar-nav">
                    @{ if (@Session[UserSession.NAME] == null)
                        { <a href="/Login/Index" class="btn btn-primary px-4"> Đăng nhập ! </a> }

                        else
                        {
                             <span class="title" style="color: black; margin: 10px 30px">Xin chào: @Session[UserSession.NAME] </span>
                             <a href="/Login/Logout" class="btn btn-primary"> Đăng Xuất </a> } }
                </div>


            </nav>
        </div>
        <!-- Navbar End -->


    </div>

    @RenderBody()

